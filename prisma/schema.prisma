generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing", "driverAdapters"]
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider  = "mysql"
  directUrl = env("DIRECT_DATABASE_URL")
  url       = env("DATABASE_URL")

  // used for planetscale:
  relationMode = "prisma"
}

model Card {
  id          String  @id @default(cuid()) @db.VarChar(25)
  name        String
  description String?

  createdAt   DateTime @default(now())
  createdBy   User     @relation(name: "createdBy", fields: [createdById], references: [id])
  createdById String   @db.VarChar(25)
  updatedAt   DateTime @updatedAt
  updatedBy   User     @relation(name: "updatedBy", fields: [updatedById], references: [id])
  updatedById String   @db.VarChar(25)

  listId String @db.VarChar(25)
  list   List?  @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@index([createdById])
  @@index([updatedById])
  @@index([listId])
}

model List {
  id        String   @id @default(cuid()) @db.VarChar(25)
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  board     Board?   @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId   String   @db.VarChar(25)
  cards     Card[]

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String @db.VarChar(25)

  @@index([boardId])
  @@index([createdById])
}

model Board {
  id          String   @id @default(cuid()) @db.VarChar(25)
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String   @db.VarChar(25)

  lists List[]

  @@index([createdById])
}

model User {
  id            String   @id @default(cuid()) @db.VarChar(25)
  email         String   @unique
  name          String
  avatarUrl     String?
  auth0id       String?  @unique
  identity      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  boards        Board[]
  CardCreatedBy Card[]   @relation(name: "createdBy")
  CardUpdatedBy Card[]   @relation(name: "updatedBy")
  lists         List[]
}
