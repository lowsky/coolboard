{
  "ignoreDeps": ["@types/.*"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "includePaths": [
    "package.json",
    ".circleci/config.yml",
    ".github/workflows/cleanup-neon-preview.yml",
    "smoketest/package.json",
    ".nvmrc"
  ],
  "dependencyDashboard": true,
  "rebaseWhen": "never",
  "extends": ["config:recommended"]
}
